<style>
/* Page Hero */
.page-hero {
  position: relative;
  padding: calc(var(--header-height) + 4rem) 0 4rem;
  text-align: center;
  overflow: hidden;
}

.page-hero__bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-primary) 100%);
  z-index: -1;
}

.page-hero__grid {
  position: absolute;
  inset: 0;
  background-image: 
    linear-gradient(rgba(45, 140, 240, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(45, 140, 240, 0.03) 1px, transparent 1px);
  background-size: 60px 60px;
}

.page-hero__label {
  display: inline-block;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: #2d8cf0;
  margin-bottom: 1rem;
}

.page-hero__title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  margin-bottom: 1.5rem;
  line-height: 1.1;
}

.text-accent {
  color: #2d8cf0;
}

.page-hero__desc {
  font-size: 1.25rem;
  color: var(--color-text-secondary);
  max-width: 600px;
  margin: 0 auto;
}

/* Section Common */
.section {
  padding: 5rem 0;
}

.section--alt {
  background: var(--color-bg-secondary);
}

.section-label {
  display: inline-block;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: #2d8cf0;
  margin-bottom: 0.75rem;
}

.section-heading {
  font-size: clamp(2rem, 4vw, 2.75rem);
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.section-header {
  text-align: center;
  max-width: 600px;
  margin: 0 auto 4rem;
}

.section-desc {
  color: var(--color-text-secondary);
  font-size: 1.125rem;
}

/* Mission */
.mission__layout {
  display: grid;
  gap: 4rem;
  align-items: center;
}

@media (min-width: 1024px) {
  .mission__layout {
    grid-template-columns: 1fr 1fr;
  }
}

.mission__content p {
  font-size: 1.1rem;
  color: var(--color-text-secondary);
  line-height: 1.8;
  margin-bottom: 1rem;
}

.mission__visual {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.stat-card {
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
}

.stat-card:hover {
  border-color: #2d8cf0;
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.stat-card__value {
  font-size: 2rem;
  font-weight: 700;
  color: #2d8cf0;
  margin-bottom: 0.5rem;
}

.stat-card__label {
  font-size: 0.875rem;
  color: var(--color-text-muted);
}

/* Values */
.values__grid {
  display: grid;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .values__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .values__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.value-card {
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: 20px;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
}

.value-card:hover {
  border-color: #2d8cf0;
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.value-card__icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.value-card h3 {
  font-size: 1.125rem;
  margin-bottom: 0.75rem;
}

.value-card p {
  font-size: 0.9rem;
  color: var(--color-text-secondary);
  line-height: 1.7;
  margin: 0;
}

/* Founder */
.founder__layout {
  display: grid;
  gap: 4rem;
  align-items: start;
}

@media (min-width: 1024px) {
  .founder__layout {
    grid-template-columns: 280px 1fr;
  }
}

.founder__image {
  text-align: center;
}

.founder__avatar {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: linear-gradient(135deg, #0D2741 0%, #2d8cf0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
  box-shadow: 0 20px 60px rgba(13, 39, 65, 0.3);
  overflow: hidden;
  border: 4px solid var(--color-bg-primary);
}

.founder__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.founder__badge {
  display: inline-block;
  padding: 0.5rem 1.25rem;
  background: #2d8cf0;
  color: #fff;
  border-radius: 100px;
  font-size: 0.875rem;
  font-weight: 600;
}

.founder__location {
  color: var(--color-text-secondary);
  margin-bottom: 1.5rem;
}

.founder__bio p {
  font-size: 1rem;
  color: var(--color-text-secondary);
  line-height: 1.8;
  margin-bottom: 1rem;
}

.founder__expertise {
  margin-top: 2rem;
}

.founder__expertise h4 {
  font-size: 1rem;
  margin-bottom: 1rem;
}

.expertise-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  padding: 0.5rem 1rem;
  background: var(--color-bg-secondary);
  border: 1px solid var(--color-border);
  border-radius: 100px;
  font-size: 0.875rem;
  font-weight: 500;
}

/* Why Us */
.why-us__grid {
  display: grid;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .why-us__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .why-us__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.feature-card {
  background: var(--color-bg-card);
  border: 1px solid var(--color-border);
  border-radius: 20px;
  padding: 2rem;
  transition: all 0.3s ease;
  position: relative;
}

.feature-card:hover {
  border-color: #2d8cf0;
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.feature-card__number {
  font-size: 2.5rem;
