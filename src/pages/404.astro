---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="404 | Page Not Found"
  description="This page doesnâ€™t exist. Head back to the homepage or contact us for help."
  noindex={true}
  nofollow={true}
>
  <section class="nf">
    <div class="container nf__container">
      <p class="nf__code">404</p>
      <h1 class="nf__title">Page not found</h1>
      <p class="nf__text">
        The link may be broken, or the page may have moved.
      </p>
      <div class="nf__actions">
        <a class="btn btn-primary" href="/">Go Home</a>
        <a class="btn btn-secondary" href="/#contact">Contact</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .nf {
    padding: calc(var(--header-height) + var(--space-16)) 0 var(--space-16);
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-primary) 100%);
    text-align: center;
  }

  .nf__code {
    font-size: clamp(4rem, 10vw, 7rem);
    font-weight: var(--font-bold);
    letter-spacing: -0.04em;
    background: linear-gradient(135deg, var(--color-brand-accent), var(--color-brand-gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-2);
  }

  .nf__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .nf__text {
    color: var(--color-text-secondary);
    max-width: 560px;
    margin: 0 auto var(--space-8);
    line-height: 1.8;
  }

  .nf__actions {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }
</style>


