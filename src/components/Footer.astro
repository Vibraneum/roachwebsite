---
/**
 * Footer Component
 * Premium footer with proper links and branding
 */

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/#services', label: 'Our Services' },
  { href: '/#investments', label: 'Investments' },
  { href: '/#contact', label: 'Contact' },
];

const services = [
  { href: '/#investments', label: 'Cryptocurrency' },
  { href: '/#investments', label: 'Stocks' },
  { href: '/#investments', label: 'Mutual Funds' },
  { href: '/#investments', label: 'Commodities' },
];
---

<footer class="footer">
  <div class="footer__main container">
    <div class="footer__grid">
      <!-- Brand Column -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="logo-i">i</span><span class="logo-rise">Rise</span><span class="logo-capital"> Capital</span>
        </a>
        <p class="footer__tagline">
          Empowering informed investment decisions through thoughtful guidance and professional expertise.
        </p>
        <a href="mailto:irisecapital@gmail.com" class="footer__email">
          irisecapital@gmail.com
        </a>
      </div>

      <!-- Quick Links -->
      <div class="footer__column">
        <h4 class="footer__title">Quick Links</h4>
        <ul class="footer__list">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="footer__column">
        <h4 class="footer__title">Services</h4>
        <ul class="footer__list">
          {services.map(link => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__column">
        <h4 class="footer__title">Contact Us</h4>
        <ul class="footer__list footer__list--contact">
          <li>üìç Hyderabad, India</li>
          <li>üí∞ Consultation: ‚Çπ299</li>
        </ul>
      </div>
    </div>

    <!-- AI Summarize -->
    <div class="ai-summarize">
      <p class="ai-summarize__label">Summarize this page with AI</p>
      <div class="ai-summarize__buttons" id="ai-buttons"></div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer__bottom">
    <div class="container footer__bottom-inner">
      <p class="footer__copyright">
        ¬© {currentYear} iRise Capital. All rights reserved.
      </p>
      <p class="footer__disclaimer">
        Investment advisory services are subject to market risks. Past performance does not guarantee future results.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #0D2741;
    color: #fff;
  }

  .footer__main {
    padding: 4rem 0 2rem;
  }

  .footer__grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
      gap: 3rem;
    }
  }

  /* Brand */
  .footer__brand {
    max-width: 280px;
  }

  @media (max-width: 639px) {
    .footer__brand {
      max-width: 100%;
      text-align: center;
      margin: 0 auto;
    }
  }

  .footer__logo {
    display: inline-block;
    font-family: var(--font-display, 'Outfit', sans-serif);
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    margin-bottom: 0.75rem;
  }

  .footer__logo .logo-i {
    color: #2d8cf0;
    font-weight: 400;
    font-style: italic;
  }

  .footer__logo .logo-rise,
  .footer__logo .logo-capital {
    color: #fff;
  }

  .footer__tagline {
    font-size: 0.875rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.65);
    margin-bottom: 1rem;
  }

  .footer__email {
    display: inline-block;
    font-size: 0.875rem;
    color: #2d8cf0;
    text-decoration: none;
  }

  .footer__email:hover {
    text-decoration: underline;
  }

  /* Columns */
  .footer__title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 1rem;
  }

  .footer__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.65);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer__link:hover {
    color: #fff;
  }

  .footer__list--contact li {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.65);
  }

  /* AI Summarize */
  .ai-summarize {
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .ai-summarize__label {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.75rem;
  }

  .ai-summarize__buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  /* Bottom Bar */
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
  }

  .footer__bottom-inner {
    text-align: center;
  }

  .footer__copyright {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.5rem;
  }

  .footer__disclaimer {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
    max-width: 600px;
    margin: 0 auto;
  }
</style>

<style is:global>
  .ai-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  .ai-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }

  .ai-btn svg {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }
</style>

<script>
  (function () {
    const providers = [
      {
        name: 'ChatGPT',
        url: 'https://chatgpt.com/?q=',
        icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M22.28 9.82a5.98 5.98 0 0 0-.52-4.91 6.05 6.05 0 0 0-6.51-2.9A6.07 6.07 0 0 0 4.98 4.18a5.98 5.98 0 0 0-4 2.9 6.05 6.05 0 0 0 .74 7.1 5.98 5.98 0 0 0 .51 4.91 6.05 6.05 0 0 0 6.51 2.9A5.98 5.98 0 0 0 13.26 24a6.06 6.06 0 0 0 5.77-4.21 5.99 5.99 0 0 0 4-2.9 6.06 6.06 0 0 0-.75-7.07z"/></svg>`,
      },
      {
        name: 'Claude',
        url: 'https://claude.ai/new?q=',
        icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M17.3 3.54h-3.67l6.7 16.92H24zM6.7 3.54 0 20.46h3.74l1.37-3.55h7l1.37 3.55h3.74L10.54 3.54zm-.37 10.22 2.29-5.95 2.29 5.95z"/></svg>`,
      },
      {
        name: 'Gemini',
        url: 'https://gemini.google.com/app',
        clipboard: true,
        icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12s5.37 12 12 12 12-5.37 12-12S18.63 0 12 0zm0 3.6c4.64 0 8.4 3.76 8.4 8.4s-3.76 8.4-8.4 8.4-8.4-3.76-8.4-8.4 3.76-8.4 8.4-8.4z"/><circle cx="12" cy="12" r="4"/></svg>`,
      },
      {
        name: 'Perplexity',
        url: 'https://www.perplexity.ai/search?q=',
        icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M22.4 7.09h-2.31V.07l-7.51 6.35V.16h-1.16v6.2L4.49 0v7.09H1.6v10.4h2.89V24l6.93-6.36v6.2h1.16v-6.05l6.93 6.18v-6.49h2.89V7.09z"/></svg>`,
      },
    ];

    const prompt = `Summarize this page in a professional tone: ${document.title}. URL: ${window.location.href}`;

    const container = document.getElementById('ai-buttons');
    if (!container) return;

    providers.forEach((p) => {
      const a = document.createElement('a');
      a.className = 'ai-btn';
      a.target = '_blank';
      a.rel = 'noopener noreferrer';
      
      if (p.clipboard) {
        a.href = p.url;
        a.addEventListener('click', async (e) => {
          e.preventDefault();
          try {
            await navigator.clipboard.writeText(prompt);
          } catch {}
          window.open(p.url, '_blank');
        });
      } else {
        a.href = p.url + encodeURIComponent(prompt);
      }
      
      a.innerHTML = `${p.icon}<span>${p.name}</span>`;
      container.appendChild(a);
    });
  })();
</script>
