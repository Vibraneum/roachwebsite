---
/**
 * Footer Component
 * Site footer with navigation and contact info
 */

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/#services', label: 'Services' },
  { href: '/#contact', label: 'Contact' },
];
---

<footer class="footer">
  <div class="footer__container container">
    <div class="footer__main">
      <!-- Brand -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">Irise Capital</a>
        <p class="footer__tagline">Empowering Informed Investment Decisions</p>
        <a href="mailto:irisecapital@gmail.com" class="footer__email">
          irisecapital@gmail.com
        </a>
      </div>

      <!-- Quick Links -->
      <div class="footer__links">
        <h4>Quick Links</h4>
        <ul>
          {footerLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="footer__links">
        <h4>Services</h4>
        <ul>
          <li><a href="/#investments">Cryptocurrency</a></li>
          <li><a href="/#investments">Stocks</a></li>
          <li><a href="/#investments">Mutual Funds</a></li>
          <li><a href="/#investments">Commodities</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__contact">
        <h4>Get in Touch</h4>
        <p>üìç Hyderabad, India</p>
        <p>üìß irisecapital@gmail.com</p>
        <p>üí∞ Consultation: ‚Çπ299</p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        ¬© {currentYear} Irise Capital. All rights reserved.
      </p>
      <p class="footer__disclaimer">
        Investment advisory services are subject to market risks. Please consult with our advisors before making investment decisions.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-brand-primary);
    color: #fff;
    padding: var(--space-16) 0 var(--space-8);
  }

  .footer__main {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 640px) {
    .footer__main {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  .footer__brand {
    max-width: 300px;
  }

  .footer__logo {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: #fff;
    text-decoration: none;
    margin-bottom: var(--space-3);
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-4);
  }

  .footer__email {
    display: inline-block;
    color: var(--color-brand-gold);
    font-size: var(--text-sm);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__email:hover {
    color: #fff;
    text-decoration: underline;
  }

  .footer__links h4,
  .footer__contact h4 {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--space-4);
    color: rgba(255, 255, 255, 0.9);
  }

  .footer__links ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer__links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--text-sm);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__links a:hover {
    color: #fff;
  }

  .footer__contact p {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-2);
  }

  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--space-8);
    text-align: center;
  }

  .footer__copyright {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-2);
  }

  .footer__disclaimer {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
    max-width: 600px;
    margin: 0 auto;
  }
</style>
